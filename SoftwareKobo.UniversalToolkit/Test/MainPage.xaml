<Page x:Class="Test.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Test"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   x:Name="txtMessage"
                   Text="Hello World"
                   Foreground="Red" />
        <StackPanel HorizontalAlignment="Stretch"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
            <Button Content="打开新窗口"
                    Click="BtnNewWindow_Click" />
            <Button Content="携带参数打开新窗口"
                    Click="BtnNewWindowWithParameter_Click" />
            <Button Content="协议启动"
                    Click="ProtocolLaunch_Click" />
            <Button Content="协议启动（但不要扩展启动屏幕）"
                    Click="ProtocolLaunchWithoutExtendedSplashScreen_Click" />
        </StackPanel>
    </Grid>
</Page>